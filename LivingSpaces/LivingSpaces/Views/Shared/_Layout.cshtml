<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LivingSpaces</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LivingSpaces.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css">

    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/assets/css/templatemo-villa-agency.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link href="~/assets/css/layout.css" rel="stylesheet" />

</head>
<body>
    <!--Main Navigation-->
    <header class="sticky-header">
        <!-- Jumbotron -->
        <div class="p-3 text-center bg-Custom ">
            <div class="container">
                <div class="row gy-3">
                    <!-- Left elements -->
                    <div class="col-lg-2 col-sm-4 col-4">
                        <a asp-controller="home" asp-action="Index" class="float-start">
                            <img src="~/assets/images/Livining.svg" height="35" />
                        </a>
                    </div>
                    <!-- Left elements -->
                    <!-- Center elements -->
                    <div class="order-lg-last col-lg-5 col-sm-8 col-8">
                        <div class="d-flex float-end bg- custom-icon">
                            <a asp-controller="PropertyListings" asp-action="Properties" class="me-1 px-3 nav-link d-flex align-items-center hover-effect"> <i class="fa fa-home m-1 me-md-2"></i><p class="d-none d-md-block mb-0">Properties</p> </a>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Profile" asp-action="Profile" class="me-1  px-3 nav-link d-flex align-items-center hover-effect"> <i class="fas fa-user-alt m-1 me-md-2"></i><p class="d-none d-md-block mb-0">Profile</p> </a>
                            }
                            else
                            {
                                <a asp-controller="Accounts" asp-action="Login" class="me-1  px-3 nav-link d-flex align-items-center hover-effect"> <i class="fas fa-user-alt m-1 me-md-2"></i><p class="d-none d-md-block mb-0">Sign in</p> </a>
                            }                            
                            <a asp-controller="Chat" asp-action="Index" class="me-1 px-3 nav-link d-flex align-items-center hover-effect"> <i class="fa-solid fa-comment m-1 me-md-2"></i><p class="d-none d-md-block mb-0">Chat</p> </a>
                        </div>
                    </div>

                    <!-- Center elements -->
                    <!-- Right elements -->
                    <div class="col-lg-5 col-md-12 col-12">
                        <div class="input-group float-center">
                            <form asp-controller="PropertyListings" asp-action="Properties" method="get" class="d-flex  w-100">
                                <div class="form-outline ">
                                    <input type="search" name="searchTerm" id="form1" class="form-control "  />
                                    <label class="form-label" for="form1">Search</label>
                                </div>
                                <button type="submit" class="btn btn-custom shadow-0">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                    </div>
                    <!-- Right elements -->
                </div>
            </div>
        </div>
    </header>
        <!-- Jumbotron -->
    <div class="content-below-header">
        @RenderBody()
    </div>

        <!-- Footer -->
        <footer class="text-center bg-Custom">
            <!-- Grid container -->
            <div class="container pt-4">
                <!-- Section: Social media -->
                <section class="mb-4">
                    <!-- Facebook -->
                    <a data-mdb-ripple-init
                       class="btn btn-link btn-floating btn-lg text-body m-1"
                       href="#!"
                       role="button"
                       data-mdb-ripple-color="dark">
                        <i class="fab fa-facebook-f"></i>
                    </a>

                    <!-- Twitter -->
                    <a data-mdb-ripple-init
                       class="btn btn-link btn-floating btn-lg text-body m-1"
                       href="#!"
                       role="button"
                       data-mdb-ripple-color="dark">
                        <i class="fab fa-twitter"></i>
                    </a>

                    <!-- Instagram -->
                    <a data-mdb-ripple-init
                       class="btn btn-link btn-floating btn-lg text-body m-1"
                       href="#!"
                       role="button"
                       data-mdb-ripple-color="dark">
                        <i class="fab fa-instagram"></i>
                    </a>

                </section>
                <!-- Section: Social media -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3">
            © 2024 Living Spaces. All rights reserved.
            </div>
            <!-- Copyright -->
        </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
