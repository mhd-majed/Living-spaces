@model LivingSpaces.Models.PropertyCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Path to your layout file

}
<main style="margin-top: 58px">
    <div class="container pt-4">

        <!--Section: Property Categories-->
        <section class="mb-4">
            <div class="card">
                <div class="card-header text-center py-3">
                    <h5 class="mb-0 text-center">
                        <strong>Edit</strong>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="CategoryID" />
                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label"></label>
                                    <input asp-for="CategoryName" class="form-control" />
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CategoryDescription" class="control-label"></label>
                                    <textarea asp-for="CategoryDescription" style="height:250px" class="form-control"></textarea>
                                    <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
