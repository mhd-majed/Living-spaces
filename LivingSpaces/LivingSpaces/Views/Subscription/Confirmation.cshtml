@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Show the alert
        Swal.fire({
            title: 'Success!',
            text: 'Your action was completed successfully.',
            icon: 'success',
            confirmButtonText: 'OK'
        }).then((result) => {
            // Redirect to Home/Index whether OK is clicked or the alert is dismissed
            window.location.href = '@Url.Action("Index", "Home")';
        }).catch((error) => {
            // Handle any errors
            window.location.href = '@Url.Action("Index", "Home")';
        });
    </script>
}
