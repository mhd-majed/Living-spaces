@model LivingSpaces.Models.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>

        body{
            background-color: #1e2a30;
        }
        .login-card {
            border-radius: 1rem;
        }

        .login-image {
            max-width: 100%;
        }

        .small.text-muted {
            color: #000;
        }

        .img-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .btn-custom {
            background-color: #1e2a30;
            color: #f5f5f5;
        }

        .btn-custom:hover {
                background-color: #ee626b;
            color: #f5f5f5;
        }
    </style>
</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-180">
            <div class="row d-flex justify-content-center align-items-center h-140">
                <div class="col col-xl-10">
                    <div class="card login-card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form asp-action="Register" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <a asp-controller="home" asp-action="Index"><img src="~/assets/images/Livining.svg" alt="Logo" title="Home" style="height:60px;" /></a>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create your account</h5>

                                        <div class="form-outline mb-4">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                                    <input asp-for="FirstName" class="form-control form-control-lg" />
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-6">
                                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                                    <input asp-for="LastName" class="form-control form-control-lg" />
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="Email" class="form-label">Email</label>
                                            <input asp-for="Email" class="form-control form-control-lg" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="Password" class="form-label">Password</label>
                                            <input asp-for="Password" class="form-control form-control-lg" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-custom btn-lg btn-block" type="submit">Register</button>
                                        </div>

                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Already have an account? <a asp-action="Login" asp-controller="Accounts" style="color: #000;">Login here</a>
                                        </p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-5 d-flex justify-content-center align-items-center">
                                <img src="~/assets/images/House searching-amico.svg"
                                     alt="register form" class="img-fluid login-image" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
